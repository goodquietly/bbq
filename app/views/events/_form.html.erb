<%= form_for @event, data: {turbo: false} do |f| %>
    <%= render partial: 'partials/form_errors', locals: {model: @event} %>

    <div class="form-floating mb-3">
      <%= f.text_field :title, autofocus: true, autocomplete: "title", 
          placeholder: "Title", id: "floatingInput", class: "form-control" %>
      <%= f.label :title, for: "floatingInput" %>
    </div>

    <div class="form-floating mb-3">
      <%= f.text_field :address, autofocus: true, autocomplete: "address", 
          placeholder: "Address", id: "floatingInput", class: "form-control" %>
      <%= f.label :address, for: "floatingInput" %>
    </div>

    <div class="form-group">
      <%= f.label :datetime %>
      <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
    </div>

    <div class="form-floating mb-3">
      <%= f.text_area :description, autofocus: true, autocomplete: "description", 
          placeholder: "Leave a description here", id: "floatingTextarea2", class: "form-control" %>
      <%= f.label :description, for: "floatingTextarea2" %>
    </div>

    <div class="form-floating mb-3">
      <%= f.text_field :pincode, autofocus: true, autocomplete: "pincode", 
          placeholder: "Leave a pincode here", id: "floatingInput", class: "form-control" %>
      <%= f.label :pincode, for: "floatingInput" %>
    </div>

    <div class="actions mb-3">
      <%= f.submit t('views.events.save'), class: 'btn btn-primary' %>
    </div>

    <div class="actions mb-3">
      <%= link_to t('views.events.back'), :back, class: 'btn btn-success mb-3' %>
    </div>
  <% end %>
