  <div class="col-md-6">

    <h3 class='mb-4'><%= t('views.events.pincode_only') %></h3>

    <%= form_tag(event_path(@event), method: 'post', data: { turbo: false }) do |f| %>
      <div class='form-floating mb-3'>
        <%= text_field_tag :pincode, params[:pincode], id: "floatingInput", class: 'form-control', placeholder: "Pincode" %>
        <%= label_tag :pincode, t('views.events.pincode'), for: "floatingInput" %>
      </div>

      <div class='actions mb-2'>
        <%= submit_tag t('views.events.enter'), class: 'btn btn-primary mb-3' %>
      </div>
    <% end %>

    <%= link_to t('views.events.to_main'), events_path, class: 'btn btn-success mb-3' %>

  </div>
