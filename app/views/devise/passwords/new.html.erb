<h2 class='text-center mb-5'><%= t('.forgot_your_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="row justify-content-center">
    <div class='col-md-6'>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-floating mb-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
          placeholder: t('views.devise.email'), id: "floatingInput", class: "form-control" %>
        <%= f.label :email, for: "floatingInput" %>
      </div>

      <div class="actions mb-3">
        <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-info' %>
      </div>
<% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
  