  <h2><%= t('.change_your_password') %></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-floating mb-3 col-md-6">
      <%= f.password_field :password, autocomplete: "new-password", 
      class: "form-control", id: "floatingPassword", placeholder: "Password" %>
      <% if @minimum_password_length %>
        <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em><br />
      <% end %>
      <%= f.label :password, t('.new_password'), for: "floatingPassword" %>
    </div>

    <div class="form-floating mb-3 col-md-6">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", 
      class: "form-control", id: "floatingPassword", placeholder: "Password" %>
      <%= f.label :password_confirmation, t('.confirm_new_password'), for: "floatingPassword" %>
    </div>

    <div class="actions mb-3">
      <%= f.submit t('.change_my_password'), class: 'btn btn-primary mb-3' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
