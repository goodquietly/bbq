  
  <h1><%= t('.title') %></h1>
  <p><%= link_to image_tag(@photo.photo.variant(:thumb).processed.url), @photo.photo.url %></p>
  <p><%= t('.author') %>: 
    <strong><%= link_to @photo.user.name, user_url(@photo.user) %></strong>
  </p>

  <hr/>

  <%= t('.event') %>
  <h3><strong><%= link_to @event.title, event_url(@event) %></strong>
  </h3>

  <%= t('.datetime') %>
  <h4><%= l(@event.datetime, format: :short) %></h4>

  <%= t('.owner') %>
  <h4><%= link_to @event.user.name, user_url(@event.user) %></h4>
