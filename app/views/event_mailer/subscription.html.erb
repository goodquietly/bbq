  <h1><%= t('.title') %></h1>
  <p><%= t('.name') %>: <strong><%= @name %></strong></p>
  <p><%= t('.email') %>: <strong><%= link_to @email, "mailto:#{@email}" %></strong></p>
  <hr/>

  <%= t('.event') %>

  <h3><strong><%= link_to @event.title, event_url(id: @event) %></strong>
  </h3>

  <%= t('.datetime') %>
  <h4><%= l(@event.datetime, format: :short) %></h4>

  <%= t('.owner') %>
  <h4><%= link_to @event.user.name, user_url(id: @event.user) %></h4>
