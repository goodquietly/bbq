  
  <div class="text-center">
    <h1><%= @user.name %></h1>

    <%= image_tag user_avatar(@user) %>

    <% if @user == current_user %>
      <p class="buffer-top"><%= link_to t('views.users.edit_profile'), edit_user_path(@user), 
      class: 'btn btn-info' %></p>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3><%= t('views.users.organized') %></h3>
        <div class="row" data-turbo="false">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top"><%= t('views.users.did_not_organize_anything') %></p>
      <% end %>
    </div>
  </div>
