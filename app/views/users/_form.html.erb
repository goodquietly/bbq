<%= form_for @user, data: {turbo: false}, html: {multipart: true} do |f| %>
    <%= render partial: 'partials/form_errors', locals: {model: @user} %>

    <div class="form-floating mb-3">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", 
          placeholder: "Name", id: "floatingInput", class: "form-control" %>
      <%= f.label :name, for: "floatingInput" %>
    </div>

    <div class="form-floating mb-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", 
          placeholder: "name@example.com", id: "floatingInput", class: "form-control" %>
      <%= f.label :email, for: "floatingInput" %>
    </div>

    <div class="form-control mb-3">
      <%= f.label :avatar, class: "form-label", for: "customFile" %>
      <p><%= image_tag(@user.avatar.thumb.url) if @user.avatar? %></p>
      <%= f.file_field :avatar, type: "file", class: "form-control", id: "customFile" %>
    </div>

    <div class="actions mb-3">
      <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
    </div>

    <div class="actions mb-3">
      <%= link_to "Назад", :back, class: 'btn btn-success mb-3' %>
    </div>

  <% end %>
