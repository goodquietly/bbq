      <%= content_tag(:span, '', class: ["fi", "fi-ru"]) %>
      <% end %>

      <%= + t('app.language') %>
    </a>
    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
      <li><%= link_to content_tag(:span, '', class: ["fi", "fi-gb"]) + t('app.english'), 
                  url_for(back: true, locale: :en), class: "dropdown-item" %></li>
      <li><%= link_to content_tag(:span, '', class: ["fi", "fi-ru"]) + t('app.russian'), 
                  url_for(back: true, locale: :ru), class: "dropdown-item" %></li>
